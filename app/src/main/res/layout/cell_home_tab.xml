<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="4dp"
    android:background="@android:color/holo_red_dark"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/video_thumbnail"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        tools:src="@drawable/ic_512"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/video_view_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:maxLines="1"
            android:textColor="@android:color/white"/>

        <TextView
            android:id="@+id/video_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:drawableLeft="@drawable/like"
            android:drawablePadding="4dp"
            android:layout_marginLeft="4dp"
            android:maxLines="1"
            android:textColor="@android:color/white"/>

        <TextView
            android:id="@+id/video_dislike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/dislike"
            android:drawablePadding="4dp"
            android:layout_marginLeft="4dp"
            android:textSize="10sp"
            android:maxLines="1"
            android:textColor="@android:color/white"/>



    </LinearLayout>



    <TextView
        android:id="@+id/video_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:gravity="left"
        android:lines="2"
        android:textColor="@android:color/white"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="2dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/video_publisher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:textSize="10sp"
            android:maxLines="1"
            android:textColor="@android:color/white"/>

       <!-- <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>
-->
        <TextView
            android:id="@+id/video_publish_at"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:layout_marginLeft="8dp"
            android:maxLines="1"
            android:textColor="@android:color/white"/>

    </LinearLayout>


</LinearLayout>